root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{*.sass, *.scss}]
indent_style = tab
indent_size = 4


[{*.js, *.ts, *.html}]
indent_style = tab
indent_size = 4


[{*.yml,*.yaml, package.json}]
indent_style = space
indent_size = 2
root = true

[*.md]
trim_trailing_whitespace = false
