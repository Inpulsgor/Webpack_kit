{
    "compilerOptions": {
      "outDir": "./build/bundle",
      "module": "es6",
      "target": "es5",
	  "jsx": "preserve",
	  "moduleResolution": "node",
      "noImplicitAny": true,
      "allowJs": true,
	  "sourceMap": true,
	  "experimentalDecorators": true,
	  "resolveJsonModule": true,
	  "allowSyntheticDefaultImports": true
    },
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/**/*"
	]
  }